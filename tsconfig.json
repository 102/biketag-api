{
  "include": ["src/**/*"],
  "exclude": ["src/coverage/", "src/mocks/", "src/**/*.test.ts"],
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es2019", "dom"],
    "rootDir": "./src",
    "outDir": "lib",
    "importHelpers": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  }
}
