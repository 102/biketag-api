{
  "include": ["src"],
  "exclude": ["src/coverage/", "src/mocks/", "src/**/*.test.ts"],

  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es6",
    "target": "es6",
    "typeRoots": ["@types", "./node_modules/@types"],
    "rootDir": "./src",
    "outDir": "lib",
    "esModuleInterop": true,
    "declaration": true
  }
}
